extends layout

block content
    .row
        .col-lg-2
            h2= title
        if user
            .col-lg-10.add-new-playlist
                form.form-inline(action="/create", method="post", accept-charset="utf-8")
                    input.new-playlist.form-control(type="text", name="name", placeholder="new playlist")
                    button.btn(type="submit") Submit
    br
    .list-group
        each list in playlists
            a.list-group-item(href='/playlist/' + list.id) #{list.name}
